@model List<Entities.Concrete.User>

    @{
    Layout = "_AdminLayout";
    }


    <h3>Üyeler</h3>
    <hr />
    <table class="table table-bordered table-striped">

        <tr>
            <td>User Id</td>
            <td>User Name</td>
            <td>Email</td>
            <td>Roller</td>
            <td>Rol Atama</td>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Hiç bir üye yoktur.</td>
            </tr>
        }
        else
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td user-roles="@item.Id"></td>
                    <td> <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a></td>                    
                </tr>
            }

        }
    </table>