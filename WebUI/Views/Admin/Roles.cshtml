@{
    Layout = "_AdminLayout";
}

<div>
    <a class="btn btn-info" asp-action="Users" asp-controller="Admin">Üyelere Rol Atama</a>
</div>
<br />

<h3>Roller</h3>
<hr />
<table class="table table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol ismi</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@item.Id" method="post">
                    <button class="btn btn-success" type="submit">Sil</button>
                </form>
            </td>
            <td><a class="btn btn-info" asp-action="UpdateRole" asp-route-id="@item.Id">Güncelle</a></td>
        </tr>

    }
</table>

<a asp-action="CreateRole" class="btn btn-info">Role Oluştur</a>